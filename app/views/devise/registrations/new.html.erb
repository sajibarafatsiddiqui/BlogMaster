<div class='container d-flex align-items-center justify-content-center flex-column'>
<div class='row align-items-center'><h2 class='justify-content-center col-12'>Sign up</h2></div>
<div class='row align-items-center'>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
 <div class="field pb-2 row">
<%= f.text_field :name, placeholder: "Name", :class => 'col-12' %>
</div>
  <div class="field pb-2 row">
    <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" , :class => 'col-12'  %>
  </div>

  <div class="field pb-2 row">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", :class => 'col-12' %>
  </div>

  <div class="field pb-2 row">
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password", :class => 'col-12' %>
  </div>

  <div class="actions pb-2 row">
    <%= f.submit "Sign up", :class => 'col-12' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>